<div class="main">
    <h1 class="head">Videos</h1>
    <div class="buttons">
        {{#each uploads}}
        <div class="vid">
            <div class="row vid-head">
                <h5 class="ml-4"> {{this.name}}</h5>
                {{#if ../admin}}
                <a href="/deleteupload/{{this._id}}" class="delete mt-1"><i class="far fa-trash-alt"></i></a>
                {{/if}}
            </div>

            <iframe src="https://www.youtube.com/embed/{{this.link}}?controls=1" title="YouTube video player"
                frameborder="0" class="vid-screen"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
        </div>
        {{/each}}
    </div>
    <a href="/uploadvideos{{course}}{{semester}}{{subject}}" class="add btn btn-success mt-5"> Add Video </a>
</div>


