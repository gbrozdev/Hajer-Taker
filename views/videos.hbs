    }

    .head {
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        margin: 10px;
    }

    .buttons {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 7vh;
        background-color: rgb(235, 235, 235);
    }

    .vid {
        position: relative;
        align-items: center;
    }

    .but {
        width: 90vw;
