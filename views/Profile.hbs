
    <h3 class="mt-3"><b>welcome {{user.name}}</b></h3>
    
    {{#if user}}
    <a class="btn logout btn-danger mt-3" href="/logout">Logout</a>
    {{/if}}

    {{#each uploads}}
    <div class="but mt-3">
        <a href="/deleteupload/{{this._id}}" class="delete"><i class="far fa-trash-alt"></i></a>
        <a href="/editupload/{{this._id}}" class="edit"><i class="far fa-edit"></i></a>
        <a href="{{this.link}}">{{this.name}}<i class="download fas fa-download"></i></a>
    </div>
    {{/each}}
    <h4 class="mt-3"><b>Your Uploads</b></h4>



